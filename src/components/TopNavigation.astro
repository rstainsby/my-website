---
import { Icon } from "astro-icon/components";
---

<nav class="navbar">
  <a id="home-icon" href="/">
    <Icon name="logo" size="2.5rem" />
  </a>

  <a class="navbar__cta" href="/">
    Hire Me

    <Icon name="mdi_email" class="icon" size="2.2rem" />
  </a>
</nav>

<script>
  const navbar = document.querySelector('.navbar');

  if (!navbar) {
    throw new Error('Navbar not found');
  }

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        navbar.classList.add('invert');
      } else {
        navbar.classList.remove('invert');
      }
    });
  }, { threshold: 0.5 });
  

  document.querySelectorAll('.header-background').forEach((element) => {
    observer.observe(element);
  });
</script>

<style scoped>
  .navbar {
    position: fixed;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    color: var(--cl-primary);
    z-index: 99;
    background-color: var(--cl-bg-alpha);
    backdrop-filter: blur(5px);
    width: 100%;
    max-width: 1120px;
    margin: 0 auto;
  }

  .navbar.invert {
    background-color: transparent;
    backdrop-filter: unset;
  }

  .navbar.invert a {
    color: var(--cl-bg);
  }

  .navbar.invert .icon {
    stroke: var(--cl-bg);
  }

  #home-icon {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .navbar__cta {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
    border: none;
    border-radius: 0.25rem;
    color: var(--cl-white);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    color: var(--cl-primary);
    text-transform: uppercase;
    letter-spacing: 0.2rem;
    transition: 0.2s ease-in-out;
    margin-top: -0.5rem;
    vertical-align: middle;
    line-height: 42px;
  }

  .navbar__cta:hover {
    letter-spacing: 0.3rem;
  }  

  .navbar__cta:hover .icon {
    animation: bounce 2s cubic-bezier(.67,.22,.37,1.01) infinite;
    fill: var(--cl-primary);
    color: var(--cl-primary);
  }

  .icon {
    display: none;
    margin-left: 0.5rem;
    color: var(--cl-primary);
    stroke: var(--cl-primary);
    stroke-width: 8;
  }

  @media screen and (min-width: 640px) {
    .navbar {
      background-color: transparent;
      backdrop-filter: unset;
      width: 100%;
      max-width: unset;
      margin: unset;
    }

    .icon {
      display: block;
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  @media (scripting: none) {
    .navbar {
      background: var(--cl-bg-alpha) !important;
      backdrop-filter: blur(5px) !important;
    }
  }
</style>